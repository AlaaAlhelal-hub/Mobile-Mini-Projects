<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
    </style>

    <style name="PrimaryFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="strokeWidth">0dp</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>

    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PrimaryText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SecondaryText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:color">@color/secondaryDarkColor</item>
    </style>

    <style name="SecondaryText.Body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/body_text_size</item>
        <item name="android:color">@color/secondaryTextColor</item>
    </style>

    <style name="PrimaryText.Title">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="PrimaryText.Subtitle">
        <item name="android:textSize">@dimen/subtitle_text_size</item>
    </style>

    <style name="MessageError" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>


    <style name="MessageLoading" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>


    <style name="CardViewStyle" parent="CardView">
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>


    <style name="Status" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Status.Submitted" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>

    <style name="Status.InProgress" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="Status.Rejected" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="Status.Completed" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/green</item>
    </style>


<style name="App.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="boxCornerRadiusTopStart">8dp</item>
    <item name="boxCornerRadiusBottomStart">8dp</item>
    <item name="boxCornerRadiusTopEnd">8dp</item>
    <item name="boxCornerRadiusBottomEnd">8dp</item>
    <item name="boxStrokeWidth">3dp</item>
</style>


</resources>